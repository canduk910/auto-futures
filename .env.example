# Auto Futures sample environment file
# 복사하여 .env 로 이름을 바꾼 후 값 채우기

# --- 기본 실행 설정 ---
ENV=paper
DRY_RUN=false
SYMBOL=ETHUSDT
LEVERAGE=5
LOG_LEVEL=INFO
TZ=Asia/Seoul

# --- WebSocket 옵션 ---
WS_ENABLE=true
WS_USER_ENABLE=true
WS_PRICE_ENABLE=true
WS_TRACE=false

# --- 서비스 루프 설정 ---
LOOP_ENABLE=true
LOOP_TRIGGER=event
LOOP_INTERVAL_SEC=60
LOOP_COOLDOWN_SEC=8
LOOP_BACKOFF_MAX_SEC=30

# --- 변동성 감지기 ---
MP_WINDOW_SEC=10
MP_DELTA_PCT=0.2
KLINE_RANGE_PCT=0.5
VOL_LOOKBACK=20
VOL_MULT=3.0
USE_QUOTE_VOLUME=true

# --- Binance API (필수) ---
BINANCE_TESTNET_API_KEY=
BINANCE_TESTNET_SECRET_KEY=
# 실계좌 사용 시 아래도 채움
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# --- OpenAI (필수) ---
OPENAI_API_KEY=

# --- GCP 관련 ---
PROJECT_ID=
GOOGLE_CLOUD_PROJECT=
REGION=asia-northeast3
SERVICE=auto-futures
IMAGE_NAME=auto-futures

# Artifact Registry 이미지 전체 경로를 직접 지정하려면 IMAGE 변수 사용
# IMAGE=asia-northeast3-docker.pkg.dev/${PROJECT_ID}/auto-futures/${IMAGE_NAME}

# Cloud Run 배포 옵션
MEMORY=1Gi
CPU=1
MAX_INSTANCES=1
ALLOW_UNAUTH=true

# Secret Manager 권한 자동 부여 여부
GRANT_SECRET_ROLES=true
SECRET_ROLE=roles/secretmanager.admin

# Cloud Build logging 모드 (gcloud 버전에 따라 자동 감지)
BUILD_LOGGING=cloud-logging-only

# --- 런타임 백업/복원 ---
SYNC_RUNTIME=true
SYNC_MODE=upload          # 필요 시 download 로 변경
GCS_BUCKET=auto-futures-runtime

# .env를 자동 로드하지 않으려면 LOAD_ENV_FILE=false 로 설정
LOAD_ENV_FILE=true

# cloud_run_deploy.sh 가 다른 env 파일을 읽게 하려면 아래 값을 수정
ENV_FILE=.env

